@model IEnumerable<VeritabanıKatman.tbl_Satici>

@{
    ViewBag.Title = "Satın Alımı Bitir";
}

<script src="~/Scripts/jquery-3.4.1.js"></script>

@using (Html.BeginForm("SatinAlimOnayla", "SatinAlim", FormMethod.Post))
{

    <div class="card">
        <div class="card card-flat">
            <div class="card-header">
                @* Buraya Bak *@
            <input type="submit" style="float:right;" value="Satın Alımı Bitir" class="btn btn-success" />
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover" id="dataTable">
                        <thead style="background-color:lightgray;">
                            <tr>

                                <th>
                                    Satıcı
                                </th>
                                <th>
                                    İletişim No
                                </th>

                                <th>
                                    Satıcı Email
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.adi)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.iletisimNo)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.email)
                                    </td>
                                    <td>
                                        <input type="checkbox" name="name @item.id_Satici" class="chb" />
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
}

<script type="text/javascript">
    $(document).ready(function () {

        $(".chb").change(function (event) {
            $(".chb").prop('checked', false);
            $(this).prop('checked', true);

        });
    });
</script>
