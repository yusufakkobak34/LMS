@model IEnumerable<VeritabanıKatman.tbl_KullaniciTipi>

@{
    ViewBag.Title = "Tüm Kullanıcılar";
}

    @Html.ActionLink("Yeni Kullanıcı Tipi", "Create", null, new { @class = "btn btn-primary" })
    <hr />
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Kullanıcı Tipleri</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.kullaniciTipi)
                            </th>
                            <th></th>
                        </tr>
                        </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.kullaniciTipi)
                                </td>
                                <td>
                                    @Html.ActionLink("Düzenle", "Edit", new { id = item.id_KullaniciTipi }, new {@class="btn btn-info"}) |
                                    @Html.ActionLink("Detaylar", "Details", new { id = item.id_KullaniciTipi }, new {@class="btn btn-primary"}) 
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                </div>
                </div>
                </div>
