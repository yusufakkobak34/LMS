@model IEnumerable<VeritabanıKatman.tbl_KitapTipi>

@{
    ViewBag.Title = "Kitap Tipleri";
}

<p>
    @Html.ActionLink("Kitap Tipi Ekle", "Create",null, new {@class="btn btn-primary"})
</p>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Kitap Tipleri</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            Kitap Tipi
                        </th>
                        <th>
                            Kullanıcı
                        </th>
                        <th>Eylemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.isim)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.id_Kullanici)
                            </td>
                            <td>
                                @Html.ActionLink("Düzenle", "Edit", new { id = item.id_KitapTipi }, new { @class = "btn btn-info" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            </div>
            </div>
        </div>

   
