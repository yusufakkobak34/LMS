@{ 
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>LMS - Giriş Yap</title>

   
    <link href="~/Content/AdminTemplate/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="~/Content/AdminTemplate/css/fonts.css" rel="stylesheet" />
    <link href="~/Content/AdminTemplate/css/sb-admin-2.min.css" rel="stylesheet">

</head>

<body class="bg-gradient-primary">

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-5 col-lg- col-md-5">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p">              
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Hoş Geldiniz!</h1>
                            </div>
                            <h5 class="alert-danger">@ViewBag.Message</h5>

                            @using (Html.BeginForm("LoginUser", "Home", FormMethod.Post, new { @class = "form-horizontal user", role = "form", enctype = "multipart/form-data" }))
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-group">
                                    <input type="text" class="form-control form-control-user" id="kullaniciAdi" name ="kullaniciAdi" required placeholder="Kullanıcı Adı Girin...">
                                </div>
                                <div class="form-group">
                                    <input type="password" class="form-control form-control-user" id="sifre" name="sifre" required placeholder="Şifrenizi girin...">
                                </div>
                                <div class="form-group">
                                    <div class="custom-control custom-checkbox small">
                                        <input type="checkbox" class="custom-control-input" id="customCheck">
                                        <label class="custom-control-label" for="customCheck">Beni Hatırla</label>
                                    </div>
                                </div>

                               <input type="submit" value="Giriş Yap" class="btn btn-primary btn-user btn-block" />
                             

                            }

                            <hr>
                            <div class="text-center">
                                <a class="small" href="forgot-password.html">Şifreni mi unuttun ?</a>
                            </div>
                        </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

    <script src="~/Content/AdminTemplate/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/AdminTemplate/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/AdminTemplate/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="~/Content/AdminTemplate/js/sb-admin-2.min.js"></script>

</body>
</html>
</html>
